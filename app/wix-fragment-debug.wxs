<?xml version="1.0" encoding="utf-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <Fragment>
    <DirectoryRef Id="ApplicationProgramsFolder">
      <Component Id="DebugShortcutComponent" Guid="*" Win64="yes">
        <Shortcut Id="DebugModeShortcut"
                  Name="{{product_name}} - debug"
                  Description="Launch {{product_name}} in debug mode"
                  Target="[INSTALLDIR]{{product_name}}.exe"
                  Arguments="/debug"
                  WorkingDirectory="INSTALLDIR" />
        <RegistryValue Root="HKCU"
                       Key="Software\{{product_name}}"
                       Name="DebugShortcut"
                       Type="integer"
                       Value="1"
                       KeyPath="yes" />
      </Component>
    </DirectoryRef>
    <ComponentGroup Id="DebugShortcutGroup">
      <ComponentRef Id="DebugShortcutComponent" />
    </ComponentGroup>
  </Fragment>
</Wix>
